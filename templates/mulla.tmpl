{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="column">
            <img src="/static/images/mulla.jpg" class="img-fluid img-thumbnail mx-auto d-block image-style"
                alt="bedroom">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="column">
            <h1 class="text-center mt-4">Welcome to Mulla!</h1>
            <p class="text-center">Your home away from home, set on the shores of the lovely Vembanadu lake
                Your home away from home, set on the shores of the lovely Vembanadu lake
