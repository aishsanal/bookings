{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="mt-5">Check Room Availability</h1>
            <form action="/make-reservation" method="GET" class="needs-validation" novalidate>
                <div class="form-row">
                    <div class="col">
                        <div class="row" id="reservation-dates">
                            <div class="col">
                                <label for="fromDate" name="fromDate" class="form-label">From</label>
                                <input required type="text" class="form-control" name="start" placeholder="MM/DD/YYYY">
                            </div>
                            <div class="col">
                                <label for="toDate" name="toDate" class="form-label">To</label>
                                <input required type="text" class="form-control" name="end" placeholder="MM/DD/YYYY">
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <button type="submit" class="btn btn-primary">Search Availability</button>
            </form>
        </div>
    </div>
</div>
{{end}}

